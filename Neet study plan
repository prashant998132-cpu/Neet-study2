<body>

<div id="clock"></div>

<div id="panel"></div>

<div id="assistant" class="normal">
<img src="girl.png">
</div>

<script>

/* SCHEDULE */
const schedule=[
{start:"05:00",end:"07:00",subject:"Physics"},
{start:"07:30",end:"09:00",subject:"Chemistry"},
{start:"14:00",end:"16:00",subject:"Biology"},
{start:"18:00",end:"20:00",subject:"Revision"}
];

let currentSlot=null;
let delayTimer=null;

/* CLOCK */
function updateClock(){
const now=new Date();
document.getElementById("clock").innerText=now.toLocaleTimeString();
checkSchedule(now);
}
setInterval(updateClock,1000);

/* TIME CHECK */
function checkSchedule(now){
const time=now.toTimeString().slice(0,5);
schedule.forEach(slot=>{
if(time===slot.start && currentSlot!==slot.subject){
startSlot(slot);
}
if(time===slot.end && currentSlot===slot.subject){
endSlot(slot);
}
});
}

/* START SLOT */
function startSlot(slot){
currentSlot=slot.subject;
speak("Session started: "+slot.subject,"normal");
delayTimer=setTimeout(()=>{
speak("You are delaying. Start immediately.","strict");
},300000);
}

/* END SLOT */
function endSlot(slot){
if(localStorage.getItem(slot.subject)!=="completed"){
markMissed(slot.subject);
speak("Time over. Target incomplete.","strict");
}
currentSlot=null;
}

/* SPEAK */
function speak(text,mood){
const assistant=document.getElementById("assistant");
assistant.classList.remove("normal","strict","gentle");
assistant.classList.add(mood);
assistant.classList.remove("shrink");
assistant.classList.add("speaking");
document.body.classList.add("blur");

let msg=new SpeechSynthesisUtterance(text);
if(mood==="strict"){msg.pitch=.9;msg.rate=.9}
if(mood==="gentle"){msg.pitch=1.2;msg.rate=.95}

msg.onend=()=>{
assistant.classList.remove("speaking");
assistant.classList.add("shrink");
document.body.classList.remove("blur");
};
speechSynthesis.speak(msg);
}

/* PANEL BUILD */
function renderPanel(){
const panel=document.getElementById("panel");
panel.innerHTML="";
schedule.forEach(slot=>{
let state=localStorage.getItem(slot.subject)||"pending";
let div=document.createElement("div");
div.className="slot "+state;
div.innerHTML=`<b>${slot.subject}</b><br>
${slot.start} - ${slot.end}<br>
<button onclick="completeSlot('${slot.subject}')">Complete</button>`;
panel.appendChild(div);
});
}
renderPanel();

/* COMPLETE */
function completeSlot(sub){
if(localStorage.getItem(sub)==="completed"){
localStorage.removeItem(sub);
}else{
localStorage.setItem(sub,"completed");
clearTimeout(delayTimer);
speak(randomMotivation(),"gentle");
}
renderPanel();
}

/* MISS */
function markMissed(sub){
localStorage.setItem(sub,"missed");
renderPanel();
}

/* MOTIVATION */
function randomMotivation(){
const lines=[
"Good work. Maintain this pace.",
"Consistency brings rank.",
"Keep pushing forward.",
"That is serious discipline."
];
return lines[Math.floor(Math.random()*lines.length)];
}

/* DAILY RESET */
function dailyReset(){
const today=new Date().toDateString();
if(localStorage.getItem("date")!==today){
localStorage.clear();
localStorage.setItem("date",today);
renderPanel();
}
}
dailyReset();

/* BLINK */
setInterval(()=>{
document.getElementById("assistant").classList.add("blink");
setTimeout(()=>document.getElementById("assistant").classList.remove("blink"),150);
},4000+Math.random()*3000);

/* INITIAL SHRINK */
setTimeout(()=>document.getElementById("assistant").classList.add("shrink"),1500);

</script>
</body>
